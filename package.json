  "license": "MIT",
  "dependencies": {
    "ts-node": "10.9.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "globstar": "^1.0.0",
    "tsx": "^4.10.5"
  }
}
